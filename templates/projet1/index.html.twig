{% extends 'base.html.twig' %}

{% block title %}Hello Projet1Controller!{% endblock %}

{% block body %}

 <div class="container text-center px-5 py-3 my-3 bg-warning rounded-3 shadow-lg bg-opacity-50" id="tableau">





<h3 class=" text-center">liste des employés</h3>
<hr>
<button> <a href=" {{path('create')}} "> Ajouter un employé</a></button>
<hr>

{% for message in app.flashes('success') %}

<div class="alert alert-success text-center">{{ message }}</div>
    
{% endfor %}
<hr>
<table class="table  table-striped table-hover">
  <thead>
    <tr>
      <th scope="col" class="grid text-center">#</th>
      <th scope="col">Prenom</th>
      <th scope="col">Nom</th>
      <th scope="col">Telephone</th>
      <th scope="col">Email</th>
      <th scope="col">Adresse</th>
      <th scope="col">Salaire</th>
      <th scope="col">DateDeNaissance</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>

  {% for employer in tabEmployes %}
     <tr >
      <th scope="row"> {{ employer.id }} </th>
      <td> {{employer.prenom }} </td>
      <td> {{employer.nom }} </td>
      <td> {{ employer.telephone }} </td>
      <td> {{ employer.email }} </td>
      <td> {{ employer.adresse }} </td>
      <td> {{ employer.salaire }} </td>
      <td> {{ employer.datedenaissance|date('d/m/Y') }} </td>
      <td> 
      <a href=" {{ path("edit", {id: employer.id} ) }} "><i class="fa-solid fa-pen-to-square"></i></a>
      <a href=" {{ path('delete', {id: employer.id}) }} "><i class="fa-solid fa-trash-can"></i></a>
      </td>
    </tr> 
  {% endfor %}
  
  </tbody>
</table>
</div>



{% endblock %}